<h1>Wames Gorkshop</h1>

<% if user_signed_in? %>
    <h5>Logged in as: <%= link_to current_user.name, edit_user_registration_path %></h5>
    <h5><%= link_to("Logout", destroy_user_session_path, method: :delete) %></h5>
<% else %>
    <h5><%= link_to("Login", new_user_session_path) %></h5>
    <h5><%= link_to("Sign Up", new_user_registration_path) %></h5>
<% end %>

<%= link_to "Figures", "/figures" %>
<%= link_to "Factions", "/factions" %>
<%= link_to "Contact Page", "/contact" %>

<div>
    <% @abouts.each do |about| %>
        <div>
            <h2><%= about.title %></h2>
            <p><%= about.body %></p>
        </div>
    <% end %>
</div>